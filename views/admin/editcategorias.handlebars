{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Editar Categoria: </h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/edit" method="post">
            <input type="hidden" 
                name="id" 
                value="{{categoriaItem._id}}"
            >        
            <label for="idNome">Nome: </label>
            <input type="text" 
                name="nome" 
                id="idNome" 
                placeholder="Nome de categorias"
                class="form-control"
                value="{{categoriaItem.nome}}"
            >
            <br/>
            <label for="idSlug">Slug:</label>
            <input type="text" 
                name="slug" 
                id="idSlug" 
                placeholder="Slug de categoria"
                class="form-control"
                value="{{categoriaItem.slug}}"
            >
            <br/>
            <button type="submit" class="btn btn-success">Salvar</button>
        </form>
    </div>
</div>