{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
{{postagem}}
<div class="card">
    <div class="card-body">
        <h4>Editar Postagem: </h4>
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" value="{{postagemItem._id}}" name="id">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control" value="{{postagemItem.titulo}}">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" value="{{postagemItem.slug}}">
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" value="{{postagemItem.descricao}}">
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control"> {{postagemItem.conteudo}} </textarea>
            <label for="categoria" > Categoria: </label>
            <select name="categoria" class="form-select">
                {{#each categoriaItem}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-4" type="submit">Salvar</button>
        </form>
    </div>
</div>