{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Nova Categoria: </h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/nova" method="post">
            <label for="idNome">Nome: </label>
            <input type="text" 
                name="nome" 
                id="idNome" 
                placeholder="Nome de categorias"
                class="form-control"
            >
            <br/>
            <label for="idSlug">Slug:</label>
            <input type="text" 
                name="slug" 
                id="idSlug" 
                placeholder="Slug de categoria"
                class="form-control"
            >
            <br/>
            <button type="submit" class="btn btn-success">Criar Categoria</button>
        </form>
    </div>
</div>